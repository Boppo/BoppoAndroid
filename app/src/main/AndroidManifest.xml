<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="brymian.bubbles">

    <!-- PERMISSIONS -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- THE APPLICATION -->
    <application
        android:name=".damian.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- BRYANT'S STUFF -->

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".bryant.MapsActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.CameraActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.SocialButtons.SearchUsers" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.ProfileButtons.ProfileActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.ProfileButtons.ProfileBackground" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.ProfileButtons.ProfileName" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.AccountButtons.SyncFacebook" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.ProfileButtons.Privacy" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.SettingsButtons.Notifications" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.SettingsButtons.About" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.AccountButtons.VerifyEmail" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.AccountButtons.ChangePassword" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.SocialButtons.FriendsList" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.ProfileButtons.Blocking" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.ImagesDisplay" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.SocialButtons.Events" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.SocialButtons.EventsCreate" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.SocialButtons.EventsTop" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.SocialButtons.EventsYours" android:screenOrientation="portrait"></activity>
        <activity android:name=".bryant.MenuButtons.SocialButtons.EventsSearch" android:screenOrientation="portrait"></activity>
        <!-- DAMIAN'S STUFF -->

        <!-- Main activity -->

        <!-- Facebook Activity -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!-- Facebook Application ID -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name=".damian.activity.AuthenticateActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".damian.activity.AuthenticateActivityFacebook"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".damian.activity.TESTActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
