<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="BubblesTheme" parent="Theme.AppCompat.Light">
                <!-- Customize your theme here. -->
                <!--   your app branding color for the app bar -->
                <item name="colorPrimary">#42ffbf</item>
                <!--   darker variant for the status bar and contextual app bars -->
                <item name="colorPrimaryDark">#42ffbf</item>
                <!--   theme UI controls like checkboxes and text fields -->
                <item name="colorAccent">#42ffbf</item>
                <item name="colorControlNormal">@android:color/black</item>
                <item name="colorControlActivated">@android:color/black</item>
                <item name="colorControlHighlight">@android:color/black</item>
                <item name="android:textColor">@android:color/black</item>
                <item name="android:colorBackground">#e0e0e0</item>
                <item name="android:navigationBarColor">#42ffbf</item>
                <item name="android:colorForeground">#42ffbf</item>
        </style>

        <!-- Base toolbar theme -->
        <style name="AppColor">
                <item name="android:background">#3ae1a8</item>
                <item name="android:backgroundTint">#3ae1a8</item>
        </style>
</resources>