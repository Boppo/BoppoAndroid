<?xml version="1.0" encoding="utf-8"?>
<resources>
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="colorPrimary">#3ae1a8</item>
                <!--   darker variant for the status bar and contextual app bars -->
                <item name="colorPrimaryDark">#2ba67c</item>
                <item name="colorAccent">@android:color/darker_gray</item>
                <item name="android:colorForeground">@android:color/holo_red_dark</item>
                <item name="android:textColor">@android:color/black</item>
                <!--
                <item name="colorAccent">#42ffbf</item>
                <item name="colorControlNormal">@android:color/black</item>
                <item name="colorControlActivated">@android:color/black</item>
                <item name="colorControlHighlight">@android:color/black</item>
                <item name="android:colorBackground">#e0e0e0</item>
                <item name="android:navigationBarColor">#42ffbf</item>
                <item name="android:colorForeground">#42ffbf</item>
                -->
                <!-- specify shared element transitions -->
                <item name="android:windowContentTransitions">true</item>
                <item name="android:windowAllowEnterTransitionOverlap">false</item>
                <item name="android:windowEnterTransition">@transition/shared_element_transition</item>
                <item name="android:windowExitTransition">@transition/shared_element_transition</item>
                <item name="android:windowSharedElementEnterTransition">@transition/shared_element_transition</item>
                <item name="android:windowSharedElementExitTransition">@transition/shared_element_transition</item>
        </style>

        <style name="ProfileTheme" parent="AppTheme">
                <item name="android:windowTranslucentStatus">true</item>
        </style>
        <!-- Base toolbar theme -->
        <color name="AppColor">#3ae1a8</color>
        <color name="LightGrayAndroid">#f9f9f9</color>
        <color name="BlueText">#0645AD</color>
</resources>