<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/profile_edit">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        android:background="@color/AppColor"/>
    <RelativeLayout
        android:id="@+id/rlProfilePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvProfilePictureTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="@string/Profile_picture"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tvProfilePictureTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:transitionName="profile_edit_image_transition" />
        <TextView
            android:id="@+id/tvChangeProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivProfilePicture"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="@string/Change_profile_picture"
            android:textColor="@android:color/holo_blue_dark" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llFullName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/rlProfilePicture"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvFirstLastNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Full_name"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        <TextView
            android:id="@+id/tvFirstLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.Small"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/llFullName"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Username"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.Small"/>
    </LinearLayout>
</RelativeLayout>
