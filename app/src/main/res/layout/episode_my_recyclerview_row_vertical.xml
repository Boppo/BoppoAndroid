<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/halfContentPadding"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/cvEpisodeImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/halfContentPadding"
            android:elevation="12dp"
            card_view:cardCornerRadius="50dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/ivEpisodeImage"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/black"/>
            <android.support.v7.widget.CardView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:elevation="12dp"
                card_view:cardCornerRadius="17dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                android:layout_gravity="bottom|right">
                <ImageView
                    android:id="@+id/ivEpisodeLogo"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/AppColor"/>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvEpisodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium" />
            <TextView
                android:id="@+id/tvEpisodeHostUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:id="@+id/tvEpisodeViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:id="@+id/tvEpisodeLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:id="@+id/tvEpisodeLocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

