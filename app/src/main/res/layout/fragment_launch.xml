<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10px">

    <TextView
        android:paddingTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUBBLES" />

    <!-- BUBBLES LOGIN -->
    <ImageButton
        android:id="@+id/ibLoginApp"
        android:background="@drawable/app_login"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="180dp"
        android:layout_height="45dp" />

    <!-- FACEBOOK LOGIN -->
    <ImageButton
        android:id="@+id/ibLoginFacebook"
        android:background="@drawable/facebook_login"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="180dp"
        android:layout_height="45dp" />

    <!-- DEBUG -->
    <TextView
        android:id="@+id/tvDebug"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:textColor="#0000ff"
        android:text="DEBUG."
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="New Layout"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>
