<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundGray">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/AppColor"
            app:scrimAnimationDuration="400"
            app:expandedTitleMarginEnd="16dp"
            app:expandedTitleMarginStart="@dimen/halfContentPadding"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
            <ImageView
                android:id="@+id/ivProfilePicture"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:minHeight="350dp"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="63px"
                app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/cvUserFirstLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/halfContentPadding"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/llFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvUserFirstLastName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@android:style/TextAppearance.Large"/>
                        <TextView
                            android:id="@+id/tvFriendStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/AppColorDark"
                            android:textSize="@dimen/smallTextSize"
                            android:textAllCaps="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llAcceptDeclineFriendRequest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/contentPadding"
                        android:layout_marginBottom="@dimen/halfContentPadding"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/bAccept"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/quarterContentPadding"
                            android:paddingLeft="@dimen/contentPadding"
                            android:paddingRight="@dimen/contentPadding"
                            android:text="@string/Accept"
                            android:textColor="@android:color/white"
                            android:background="@color/AppColor"/>
                        <Button
                            android:id="@+id/bDecline"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/quarterContentPadding"
                            android:paddingLeft="@dimen/contentPadding"
                            android:paddingRight="@dimen/contentPadding"
                            android:text="@string/Decline"
                            android:background="@color/LightGrayAndroid"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/contentPadding"
                        android:layout_marginBottom="@dimen/halfContentPadding"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Map"
                            android:textSize="@dimen/smallTextSize"
                            android:drawableTop="@mipmap/ic_earth_grey600_24dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Add to..."
                            android:textSize="@dimen/smallTextSize"
                            android:drawableTop="@mipmap/ic_add_black_24dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Message"
                            android:textSize="@dimen/smallTextSize"
                            android:drawableTop="@mipmap/ic_message_grey600_24dp"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvEpisodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contentPadding"
                android:background="@android:color/white"
                app:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/halfContentPadding"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/contentPadding"
                            android:src="@mipmap/ic_account_box_outline_grey600_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/halfContentPadding"
                            android:text="@string/Episodes"
                            android:textAppearance="@android:style/TextAppearance.Medium"/>
                        <TextView
                            android:id="@+id/tvEpisodesNum"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/tvSeeAllEpisodes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="See All"
                            android:textAllCaps="true"
                            android:textSize="@dimen/smallTextSize"
                            android:textColor="@color/AppColorDark"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvEpisodes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contentPadding"
                android:background="@android:color/white"
                app:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/halfContentPadding"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/contentPadding"
                            android:src="@mipmap/ic_account_multiple_grey600_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/halfContentPadding"
                            android:text="@string/Friends"
                            android:textAppearance="@android:style/TextAppearance.Medium"/>
                        <TextView
                            android:id="@+id/tvFriendsNum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/tvSeeAllFriends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="See All"
                            android:textAllCaps="true"
                            android:textSize="@dimen/smallTextSize"
                            android:textColor="@color/AppColorDark"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvFriends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvPhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contentPadding"
                android:background="@android:color/white"
                app:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/halfContentPadding"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/contentPadding"
                            android:src="@mipmap/ic_image_grey600_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/halfContentPadding"
                            android:text="@string/Photos"
                            android:textAppearance="@android:style/TextAppearance.Medium"/>
                        <TextView
                            android:id="@+id/tvPhotosNum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/tvSeeAllPhotos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="See All"
                            android:textAllCaps="true"
                            android:textSize="@dimen/smallTextSize"
                            android:textColor="@color/AppColorDark"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddFriend"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:src="@mipmap/ic_person_add_white_24dp"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|end"
        app:backgroundTint="@color/AppColor" />
</android.support.design.widget.CoordinatorLayout>
