<?xml version="1.0" encoding="UTF-8"?>

    <android.support.v4.widget.DrawerLayout android:theme="@style/Theme.AppCompat.Light.DarkActionBar" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/drawerLayout" xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/main_layout" xmlns:android="http://schemas.android.com/apk/res/android" tools:context=".MainActivity" xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.Toolbar android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/toolbar" android:transitionGroup="true" android:minHeight="?attr/actionBarSize" android:elevation="6dp" android:background="#42ffbf" android:layout_alignParentTop="true"/>

    <android.support.design.widget.TabLayout android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tab_layout" android:minHeight="?attr/actionBarSize" android:elevation="6dp" android:background="#42ffbf" android:textColor="@android:color/black" android:layout_below="@+id/toolbar"/>

    <android.support.v4.view.ViewPager android:layout_height="fill_parent" android:layout_width="match_parent" android:id="@+id/pager" android:background="@android:color/white" android:layout_below="@id/tab_layout"/>

</RelativeLayout>

    <!-- ListView that is linked with the NavigationDrawer -->


    <ListView android:layout_height="match_parent" android:layout_width="240dp" android:id="@+id/left_drawer" android:background="#ffff" android:dividerHeight="0dp" android:divider="@android:color/transparent" android:choiceMode="singleChoice" android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>