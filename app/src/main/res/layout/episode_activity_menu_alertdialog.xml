<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/AppColor"
        app:cardCornerRadius="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/tvEditEpisode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/Edit_episode"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                <View
                    android:id="@+id/vEditEpisode"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrayAndroid"/>
                <TextView
                    android:id="@+id/tvEndEpisode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/End_Episode"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                <View
                    android:id="@+id/vEndEpisode"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrayAndroid"/>
                <TextView
                    android:id="@+id/tvLeaveEpisode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/Leave_episode"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                <View
                    android:id="@+id/vLeaveEpisode"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrayAndroid"/>
                <TextView
                    android:id="@+id/tvDeleteEpisode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/Delete_episode"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
                <View
                    android:id="@+id/vDeleteEpisode"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrayAndroid"/>
                <TextView
                    android:id="@+id/tvReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/Report"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
</LinearLayout>
