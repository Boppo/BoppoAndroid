<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/halfContentPadding">
        <ImageView
            android:id="@+id/ivUserProfileImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/contentPadding"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/tvFriendsUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_toRightOf="@+id/ivUserProfileImage"/>
        <TextView
            android:id="@+id/tvFriendsFirstLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@+id/ivUserProfileImage"
            android:layout_below="@+id/tvFriendsUsername"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
