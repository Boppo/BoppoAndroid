<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#3ae1a8</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#2ba67c</item>
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="android:colorForeground">@android:color/holo_red_dark</item>
        <item name="android:textColor">@android:color/black</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <!--
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
        -->
    </style>

    <style name="OverflowMenu" parent="@android:style/Widget.Holo.Light.PopupWindow">
        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

    <!-- Base toolbar theme -->
    <color name="AppColor">#3ae1a8</color>
    <color name="LightGrayAndroid">#f9f9f9</color>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>